<settings xmlns="http://maven.apache.org/settings/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>
        <server>
            <id>github-maven</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Authorization</name>
                        <value>Bearer ${GITHUB_TOKEN}</value>
                    </property>
                </httpHeaders>
            </configuration>
        </server>
        <server>
            <id>gitlab-maven</id>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>Private-Token</name>
                        <value>${GITLAB_TOKEN}</value>
                    </property>
                </httpHeaders>
            </configuration>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>github-build</id>
            <properties>
                <releases.repo.id>github-maven</releases.repo.id>
                <releases.repo.url>https://maven.pkg.github.com/${GITHUB_REPOSITORY}
                </releases.repo.url>
                <snapshots.repo.id>github-maven</snapshots.repo.id>
                <snapshots.repo.url>https://maven.pkg.github.com/${GITHUB_REPOSITORY}
                </snapshots.repo.url>
            </properties>
        </profile>
        <profile>
            <id>gitlab-build</id>
            <properties>
                <releases.repo.id>gitlab-maven</releases.repo.id>
                <releases.repo.url>https://gitlab.com/api/v4/projects/18580785/packages/maven
                </releases.repo.url>
                <snapshots.repo.id>gitlab-maven</snapshots.repo.id>
                <snapshots.repo.url>https://gitlab.com/api/v4/projects/18580785/packages/maven
                </snapshots.repo.url>
            </properties>
        </profile>
    </profiles>


    <activeProfiles>
        <!--<activeProfile>github-build</activeProfile>-->
        <activeProfile>gitlab-build</activeProfile>
    </activeProfiles>

</settings>
