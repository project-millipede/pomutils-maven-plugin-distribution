    <profiles>
        <profile>
            <id>github-build</id>
            <properties>
                <releases.repo.id>github-maven</releases.repo.id>
                <releases.repo.url>https://maven.pkg.github.com/${env.GITHUB_REPOSITORY}
                </releases.repo.url>
                <snapshots.repo.id>github-maven</snapshots.repo.id>
                <snapshots.repo.url>https://maven.pkg.github.com/${env.GITHUB_REPOSITORY}
                </snapshots.repo.url>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>github-build</activeProfile>
    </activeProfiles>

</settings>
